# Database Configuration
DATABASE_URL=sqlite:///./whatsapp_platform.db
# For PostgreSQL: postgresql://user:password@localhost/whatsapp_platform
# For MySQL: mysql://user:password@localhost/whatsapp_platform

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WhatsApp API Configuration
WHATSAPP_API_URL=https://api.whatsapp.com/v1
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhooks/whatsapp

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Application Settings
API_V1_STR=/api/v1
PROJECT_NAME=WhatsApp Platform API
VERSION=1.0.0
